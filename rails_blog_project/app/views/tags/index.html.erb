<h1>All Tags</h1>

<ul>
    <% @tags.each do |tag| %>
        <li>
            <%= link_to tag.name, tag_path(tag) %>
            <%= link_to "Delete Tag", tag_path(tag), method: :delete, data: {confirm: "Are you Sure?"} %>
        </li>
    <% end %>
</ul>
<%= link_to "<< Back to articles index", articles_path %>
